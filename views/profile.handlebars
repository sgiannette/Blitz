<div class="row">
  <div class="col-auto">
    <h2>Welcome to Blitz! {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Post About your Favorite Game:</h3>

    <form class="form new-game-form">
      <div class="form-group">
        <label for="game-name">Game Name:</label>
        <input class="form-input" type="text" id="game-name" name="game-name" />
      </div>
      <div class="form-group">
        <label for="game-time">Hours every day spent:</label>
        <input class="form-input" type="number" id="game-time" name="game-time" />
      </div>
      <div class="form-group">
        <label for="game-desc">Description:</label>
        <textarea class="form-input" id="game-desc" name="game-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if games.length}}
  <div class="col-md-6 game-list">
    <h3>Current Games:</h3>

    {{#each games as |game|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/game/{{game.id}}">{{game.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{game.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>